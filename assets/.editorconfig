# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# WordPress Coding Standards
# https://make.wordpress.org/core/handbook/best-practices/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.twig]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.txt]
end_of_line = crlf

[*.php]
indent_style = tab
indent_size = 4
insert_final_newline = true